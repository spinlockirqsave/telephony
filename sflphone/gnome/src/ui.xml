<ui>
  <menubar name="MenuBar">
    <menu name="CallMenu" action="Call">
      <menuitem action="NewCall"/>
      <separator/>
      <menuitem action="PickUp"/>
      <menuitem action="HangUp"/>
      <menuitem name="OnHoldMenu" action="OnHold"/>
      <menuitem action="InstantMessaging"/>
      <menuitem action="ScreenSharing"/>
      <menuitem action="Record"/>
      <separator/>
      <menuitem action="AccountAssistant"/>
      <separator/>
      <menuitem action="Close"/>
      <menuitem action="Quit"/>
    </menu>

    <menu name="EditMenu" action="Edit">
      <menuitem action="Copy"/>
      <menuitem action="Paste"/>
      <separator/>
      <menuitem action="ClearHistory"/>
      <separator/>
      <menuitem action="Accounts"/>
      <menuitem action="Preferences"/>
    </menu>

    <menu name="ViewMenu" action="View">
      <menuitem action="Toolbar"/>
      <separator/>
      <menuitem action="Dialpad"/>
      <menuitem action="VolumeControls"/>
      <separator/>
      <menuitem action="History"/>
      <separator/>
      <menuitem action="Buddies"/>
    </menu>

    <menu name="HelpMenu" action="Help">
      <menuitem action="HelpContents"/>
      <menuitem action="About"/>
    </menu>
  </menubar>

  <toolbar name="ToolbarActions">
    <toolitem name="NewCallToolbar" action="NewCall"/>
    <toolitem name="PickUpToolbar" action="PickUp"/>
    <toolitem name="HangUpToolbar" action="HangUp"/>
    <toolitem name="OnHoldToolbar" action="OnHold"/>
    <toolitem name="OffHoldToolbar" action="OffHold"/>
    <toolitem name="TransferToolbar" action="Transfer"/>
    <toolitem name="InstantMessagingToolbar" action="InstantMessaging"/>
    <toolitem name="ScreenSharingToolbar" action="ScreenSharing"/>
    <toolitem name="RecordToolbar" action="Record"/>
    <!-- FIXME: commented out because it is responsible for #7495 -->
    <!-- separator/-->

    <toolitem name="VoicemailToolbar" action="Voicemail"/>
    <toolitem name="HistoryToolbar" action="History"/>
  </toolbar>

  <popup name="PopupMenu">
    <menuitem action="Copy"/>
    <menuitem action="Paste"/>
    <separator/>
  </popup>
</ui>
